.row
    .large-6.small-12.columns
        h4#objectTitle Objet
        if item.label
            strong Nom
            p= item.label
        if comment
            strong Commentaire
            p= comment
        if item.gtin
            strong Code barre
            p#barcode= item.gtin

        hr

        h4 Transaction
        p
        if history && history.last
            if history.last.from && history.last.from.label && history.last.from.label.fr
                strong Précedent propriétaire
                p= history.last.from.label.fr
            if history.last.date
                strong date
                p= history.last.date
            if history.last.type && history.last.type.label
                strong Type de transaction
                p= history.last.type.label.fr
            if history.last.price
                strong Prix
                p= history.last.price
        hr
        strong Cet objet sur Wikidata
        p#wikidata
        if item.wikidata
            if item.wikidata.Q1570277.label.fr
                a(href="https://www.wikidata.org/wiki/Q1570277") #{item.wikidata.Q1570277.label.fr}
            each k,v in item.wikidata
                a(href="https://www.wikidata.org/wiki/#{k}")
                    | #{v.fr}
        if tags.wikidata
            each P31,wdid in tags.wikidata
                if wdid.label
                    label Catégories
                    a(href="https://www.wikidata.org/wiki/#{wdid}")
                        | #{wdid.label.fr}
        hr
        strong Cet objet sur OpenFoodFact

        hr
        strong Cet objet sur ProductOpenData

        hr
        strong Cet objet sur Respublica.io




